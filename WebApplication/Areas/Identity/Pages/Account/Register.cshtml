@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-4">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

        <div class="col-md-4 flex-wrap">
            <h4>Groups</h4>
            <hr />

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.IsBoatOwner">
                        <input asp-for="Input.IsBoatOwner" />
                        @Html.DisplayNameFor(model => model.Input.IsBoatOwner)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.IsMarinaOwner">
                        <input asp-for="Input.IsMarinaOwner" />
                        @Html.DisplayNameFor(model => model.Input.IsMarinaOwner)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.IsManager">
                        <input asp-for="Input.IsManager" />
                        @Html.DisplayNameFor(model => model.Input.IsManager)
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>

