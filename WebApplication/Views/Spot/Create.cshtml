@model WebApplication.Models.Spot

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Spot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpotNumber" class="control-label"></label>
                <input asp-for="SpotNumber" class="form-control" />
                <span asp-validation-for="SpotNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Available" /> @Html.DisplayNameFor(model => model.Available)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MaxWidth" class="control-label"></label>
                <input asp-for="MaxWidth" class="form-control" />
                <span asp-validation-for="MaxWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxLength" class="control-label"></label>
                <input asp-for="MaxLength" class="form-control" />
                <span asp-validation-for="MaxLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxDepth" class="control-label"></label>
                <input asp-for="MaxDepth" class="form-control" />
                <span asp-validation-for="MaxDepth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarinaId" class="control-label"></label>
                <select asp-for="MarinaId" class="form-control" asp-items="ViewBag.MarinaId"></select>
            </div>

            @* Cool stuff *@

            <div id="mapid" style="height: 600px"></div>

            <script src="~/js/leaflet_map.js"></script>
            <script>mymap.setView([56.2639, 9.5018], 7)</script>

            @* End of cool stuff *@

            <div class="form-group">
                <label asp-for="Location.XLatitude" class="control-label"></label>
                <input asp-for="Location.XLatitude" id="lat" class="form-control" name="XLatitude" />
                <span asp-validation-for="Location.XLatitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.YLongitude" class="control-label"></label>
                <input asp-for="Location.YLongitude" id="long" class="form-control" name="YLongitude" />
                <span asp-validation-for="Location.XLatitude" class="text-danger"></span>
            </div>

            @* Some more cool stuff *@

            <script>
                var latitude = document.getElementById("lat");
                var longitude = document.getElementById("long");

                function onMapClick(e) {
                    currentMarker
                        .setLatLng(e.latlng)
                        .addTo(mymap)
                        .bindPopup("<b>Selected Location</b><br/>" + e.latlng.toString()).openPopup();

                    latitude.value = e.latlng.lat;
                    longitude.value = e.latlng.lng;
                }

                mymap.on('click', onMapClick);

                HTMLInputElementObject.addEventListener('input', function (evt) {
                    something(this.value);
                });
            </script>

            @* End of cool stuff again *@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
