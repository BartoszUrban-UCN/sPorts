@model WebApplication.Models.Marina

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Marina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MarinaId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facilities" class="control-label"></label>
                <input asp-for="Facilities" class="form-control" />
                <span asp-validation-for="Facilities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarinaOwnerId" class="control-label"></label>
                <select asp-for="MarinaOwnerId" class="form-control" asp-items="ViewBag.MarinaOwnerId"></select>
                <span asp-validation-for="MarinaOwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressId" class="control-label"></label>
                <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                <span asp-validation-for="AddressId" class="text-danger"></span>
            </div>

            @* Initialize Leaflet Map and set the view with Denmark's coordinates *@

            <div id="mapid" style="height: 600px"></div>

            <script src="~/js/leaflet_map.js"></script>
            <script>mymap.setView([56.2639, 9.5018], 7)</script>

            @* End of initialization *@

            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <input asp-for="LocationId" class="form-control" type="number" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Location.Latitude" class="control-label"></label>
                <input id="location-latitude" class="form-control" name="Latitude" type="number" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Location.Longitude" class="control-label"></label>
                <input id="location-longitude" class="form-control" name="Longitude" type="number" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Location.Radius" class="control-label"></label>
                <input id="location-radius" class="form-control" name="Radius" type="number" readonly />
            </div>

            @* JavaScript to be able to click on map, select a Location and read the coordinates *@

            <script>
                var marinaPopup = '\
                    <div class="text-center" style="width: 200px">\
                        <b>Selected Location</b>\
                        <div style="display: flex; align-items: baseline; justify-content: space-evenly;">\
                            <label class="control-label" style="padding-right: 10px;">Size</label>\
                            <input id="popup-location-radius" class="form-control form-control-sm popup-input" type="number" style="margin: 10px 0px 10px 0px" placeholder="Radius" min="7"/>\
                        </div>\
                        <button type="button" class="btn btn-primary btn-sm" onclick=removeCircleMarker()>Remove</button>\
                    </div>\
                ';

                var currentMarker = L.marker();
                var currentCircleMarker = L.circle();

                var latitude = document.getElementById("location-latitude");
                var longitude = document.getElementById("location-longitude");
                var radius = document.getElementById("location-radius");
                var popupRadius;

                function onMapClick(e) {
                    currentCircleMarker
                        .setLatLng(e.latlng)
                        .setStyle({
                            color: 'cadetblue',
                            fillColor: 'aquamarine',
                            fillOpacity: 0.5,
                        })
                        .addTo(mymap)
                        .bindPopup(marinaPopup)
                        .openPopup();

                    latitude.value = e.latlng.lat;
                    longitude.value = e.latlng.lng;

                    popupRadius = document.getElementById("popup-location-radius");
                    popupRadius.addEventListener('change', updateLocationRadius);
                    popupRadius.addEventListener('input', updateLocationRadius);

                    popupRadius.value = 10;

                    updateLocationRadius();
                }

                function removeCircleMarker(e) {
                    currentCircleMarker.removeFrom(mymap);

                    latitude.value = null;
                    longitude.value = null;
                    radius.value = null;
                }

                function updateLocationRadius(e) {
                    currentCircleMarker
                        .setRadius(popupRadius.value * 1000);
                    radius.value = popupRadius.value;
                }

                mymap.on('click', onMapClick);
            </script>

            @* End of JavaScript *@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
    <div class="col-md-6">
        Spots
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Spot Number</th>
                    <th>Is Available</th>
                    <th>Max Width</th>
                    <th>Max Lenght</th>
                    <th>Max Depth</th>
                    <th>Spot Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Spots)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpotNumber)
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxWidth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxLength)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxDepth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <input type="submit" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit","Spot", new { id = item.SpotId})'" />
                        
                    </td>
                    <td>
                        <input type="submit" value="Delete" class="btn btn-primary" onclick="location.href='@Url.Action("Delete","Spot", new { id = item.SpotId})'" />
                    </td>
                </tr>
                }
            </tbody>
           

        </table>
        <div class="col">
            <button type="button" onclick="location.href='@Url.Action("Create","Spot")'">Add New Spot</button>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <a asp-action="Index">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
